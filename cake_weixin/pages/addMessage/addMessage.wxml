
<view class='add-message'>
    <form bindsubmit="formSubmit">
        <view class='add-message-view'>
            <view>
                <view class="title">商品标题:</view>
                <input class="my-input" type="text" name="title" placeholder="最多10个字..." maxlength="10"/>
            </view>
            <view >
                <view class="title">图片列表:</view>
                <!-- UploadImg组件 -->
                <UploadImg id="upload-img"></UploadImg>
            </view>
            <view >
                <view class="title">商品类别:</view>
                <radio-group class='radio-group'  name="classType">
                <label class='radio'  wx:for="{{productClass}}"wx:key="index">
                    <radio  value="{{item.value}}" checked="{{item.checked}}" />
                    {{item.name}}
                </label>
                </radio-group>
            </view>
            <view >
                <view class="title">商品描述:</view>
                <input class="my-input" type="text" name="desc" placeholder="最多10个字..." maxlength="10"/>
            </view>
            <view >
                <view class="title">商品数量:</view>
                <input class="my-input" name="total" type="number" placeholder="最多5位数..." maxlength="5"/>
            </view>
            <view >
                <view class="title">商品原价(选填):</view>
                <input class="my-input" name="oldPrice" type="digit"/>
            </view>
            <view >
                <view class="title">商品现价:</view>
                <input class="my-input" name="nowPrice" type="digit"/>
            </view>
            <!-- InputGroup组件 -->
            <InputGroup
            id="specs" 
            title="商品规格" 
            itemMaxLength="5"   
            itemTotal="6"
            ></InputGroup>
            <InputGroup 
            id="remarks" 
            title="提示信息" 
            itemMaxLength="50"   
            itemTotal="12"></InputGroup>
        </view>


        <button class='btn-bottom' form-type="submit">添加商品</button>
    </form>
    
</view>
